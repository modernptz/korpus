<h1>Документы</h1>
<table class="table table-striped">
  <thead>
    <tr>
        <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="form in forms">
      <td>
        <a href="/forms/{{form.id}}">
          {{form.title}}
        </a>
      </td>
      <td>
        <a href="/forms/{{form.id}}/edit"
          class="btn btn-primary"><i class="icon-edit"></i>
          Редактировать
        </a>
        <button ng-click="destroy()" class="btn btn-danger">
          <i class="icon-trash"></i> Удалить
        </button>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <a href='/forms/new' class="btn btn-primary">
    <i class="icon-plus"></i>Новый
  </a>
</p>
